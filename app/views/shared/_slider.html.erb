<div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1" style="color: #000;"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2" style="color: #000;"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3" style="color: #000;"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag 'internet3-pic1', class: "d-block w-100", alt: "internet3", style: "height: 500px;" %>
      <div class="carousel-caption d-none d-md-block card card-body text-white" style="background: rgba(0, 0, 0, 0.5);">
        <h1 style="color: #fff;">First slide label</h1><hr>
        <p>Some representative placeholder content for the first slide.</p>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'internet3-features-pic1', class: "d-block w-100", alt: "internet3", style: "height: 500px;" %>
      <div class="carousel-caption d-none d-md-block card card-body text-white" style="background: rgba(0, 0, 0, 0.5);">
        <h1 style="color: #fff;">Second slide label</h1><hr>
        <p>Some representative placeholder content for the second slide.</p>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'internet3-contact-pic1', class: "d-block w-100", alt: "internet3", style: "height: 500px;" %>
      <div class="carousel-caption d-none d-md-block card card-body text-white" style="background: rgba(0, 0, 0, 0.5);">
        <h1 style="color: #fff;">Third slide label</h1><hr>
        <p>Some representative placeholder content for the third slide.</p>
      </div>
    </div>
  </div>
</div>